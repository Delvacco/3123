
#include <iostream>
using namespace std;
int main ()
{
int n;
std::cout << "Vvedite kol-vo elemenetov arr:";
std::cin >> n;
int arr[n];
        for (int i=0;i<n;i++ )
        {
            std::cout << "Vvedite chislo:";
            std::cin >> arr[i];
        }
        for (int i=n-1;i>=0;i--)
        {
            std::cout<<arr[i]<<"|";
        }
}

5.
int main()
{
int size = 14;
int arr[size],even_numbers = 0;
std::cout << "Znacheniya_arr_vvod" << std::endl;
for (int i = 0;i != size; ++i)
{
  std::cin >> arr[i];
  if (arr[i]%2 == 0)
        {
            even_numbers++;
        }
    i++;
}
}

